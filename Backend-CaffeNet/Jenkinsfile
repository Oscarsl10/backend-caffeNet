pipeline {
    agent any

    stages {
        stage('Clonar') {
            steps {
                git branch: 'main', url: 'https://github.com/Oscarsl10/backend-caffeNet'
            }
        }

        stage('Compilar') {
            steps {
                dir('Backend-CaffeNet') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('Backend-CaffeNet') {
                    // Reconstruye la imagen del backend con el mismo tag
                    sh 'docker build -t backendcaffenet .'
                }
            }
        }

        stage('Actualizar sin reiniciar') {
            steps {
                script {
                    // Verificamos si el contenedor del backend ya está en ejecución.
                    // Ajusta el filtro de nombre al que realmente usa tu contenedor:
                    def running = sh(script: "docker ps -q -f name=backend-caffenet-app-1", returnStdout: true).trim()

                    if (running) {
                        echo 'Contenedor del backend en ejecución, no se reinicia.'
                    } else {
                        echo 'Contenedor del backend NO encontrado, iniciando todos los servicios:'
                        // Levanta (solo una vez) todos los servicios definidos en docker-compose.yml
                        sh 'docker compose up -d'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completado.'
            sh 'docker ps'
        }
        failure {
            echo 'El pipeline ha fallado.'
        }
    }
}
