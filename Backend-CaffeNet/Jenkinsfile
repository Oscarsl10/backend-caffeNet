pipeline {
    agent any

    stages {
        stage('Clonar') {
            steps {
                git branch: 'main', url: 'https://github.com/Oscarsl10/backend-caffeNet'
            }
        }

        stage('Compilar') {
            steps {
                dir('Backend-CaffeNet') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('Backend-CaffeNet') {
                    // Solo construir la imagen del backend
                    sh 'docker build -t backendcaffenet .'
                }
            }
        }

        // ⚠️ OMITIMOS el paso de despliegue para evitar reiniciar contenedores
    }

    post {
        always {
            echo 'Pipeline completado (sin reiniciar contenedores)'
            sh 'docker ps'
        }
        failure {
            echo 'El pipeline ha fallado'
        }
    }
}
